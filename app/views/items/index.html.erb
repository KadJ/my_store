<h1>Items</h1>

<% if @items.empty? %>
	<b>No items in store</b>
<% else %>
<table>
	<tr>
		<th>item id</th>
		<th>Name</th>
		<th>Price</th>
		<th></th>
		<th></th>
		<th></th>
		<th></th>
	</tr>

	<% @items.each do |i| %>

		<tr>
			<td><%= i.id %></td>
			<td><%= link_to i.name, item_path(i) %></td>
			<td><%= i.price %> руб.</td>
			<td><%= link_to "Удалить", i, method: :delete, data: { confirm: "Точно удалить"} %></td>
			<td>Рейтинг: <%= i.votes_count %>, <%= link_to "+", upvote_item_path(i) %></td>
			<td><input type="text" name="number_items" size="2" value="1"></td>
			<td><span class="addItemToCart">Добавить в корзину</span></td>
		</tr>

	<% end %>

</table>

<% end %>