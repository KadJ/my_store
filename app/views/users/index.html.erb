<h1>All users</h1>

<% if @users.empty? %>
	<b>No users in store</b>
<% else %>
<table>
	<tr>
		<th>item id</th>
		<th>User name</th>
		<th>User email</th>
		<th></th>
		<th></th>
	</tr>

	<% @users.each do |i| %>

		<tr>
			<td><%= i.id %></td>
			<td><%= link_to i.name, user_path(i) %></td>
			<td><%= i.email %> руб.</td>
			<td></td>
			<td></td>
		</tr>

	<% end %>

</table>

<% end %>

